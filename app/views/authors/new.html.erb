<h1>Authors</h1>
<%= form_for :author do |f| %>
  <p>
    <%= f.label :firstName, "First name" %><br>
    <%= f.text_field :firstName %>
  </p>
  <p>
    <%= f.label :last_name, "Last name" %><br>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :homepage, "Homepage" %><br>
    <%= f.text_field :homepage %>
  </p>
 <p>
    <%= f.submit :submit %>
  </p>
<% end %>
